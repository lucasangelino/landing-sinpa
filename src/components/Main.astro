---
import Principal from "./Principal.astro";
import Icons from "./Icons.astro";

const isLive = true;
---

<Principal>
  <div class="flex flex-col items-center my-20 h-screen">
    <h1 class="text-9xl font-bold text-white my-5">Sin Palabras</h1>
    <h2 class="text-2xl text-white"># La frecuencia que nos une</h2>
    <div class="mt-24 mb-5 w-full flex flex-col">
      {
        isLive && (
          <div class="animate-bounce bg-red-600 mx-auto p-4 rounded-sm text-white">
            Estamos en vivo!
          </div>
        )
      }
      <iframe
        class="mx-auto"
        width="60%"
        height="600"
        src="https://www.youtube.com/embed/maD9M0A4kuo"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
      {
        !isLive && (
          <div class="flex flex-col items-left">
            <h3 class="text-2xl text-white">Programa emitido</h3>
          </div>
        )
      }
    </div>
  </div>
  <Icons />
</Principal>
